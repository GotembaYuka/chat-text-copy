{
  "namespace": "chat",

  "copy_mode@settings_common.option_toggle_control": {
    "$toggle_state_binding_name": "#chat_copy_mode",
    "$option_binding_name": "#chat_copy_mode",
    "$toggle_name": "#chat_copy_mode"
  },
  
  "chat_message_content": {
    "type": "stack_panel",
    "size": [ "100%", "100%c" ],
    "controls": [
      {
        "chat_screen_messages@chat.message_tts_wrapper": {
          "bindings": [
            {
              "binding_type": "view",
              "source_control_name": "chat.copy_mode",
              "source_property_name": "(not #toggle_state)",
              "target_property_name": "#visible"
            }
          ]
        }
      },
      {
        "chat_message_copy": {
          "type": "edit_box",
          "size": [ "100%", "100%c" ],
          "max_length": 32767,

          "focus_enabled": true,

          "enabled_newline": true,
          "can_be_deselected": true,
          "always_listening": false,
          "text_type": "EntendedASCII",
          "text_box_name": "chat_copy_npx",
          "text_control": "text_panel",
          "bindings": [
            {
              "binding_type": "view",
              "source_control_name": "chat.copy_mode",
              "source_property_name": "#toggle_state",
              "target_property_name": "#visible"
            }
          ],
          "controls": [
            {
              "text_panel": {
                "type": "label",
                "size": [ "100%", "default" ],
                "layer": 5,

                "text": "#item_name",
                "localize": false,
                "enable_profanity_filter": false,

                "color": "$chat_text_color",
                "font_type": "$chat_font_type",
                "font_scale_factor": "$chat_font_scale_factor",
                "line_padding": "$chat_line_spacing",
                
                "$text_box_name": "chat_copy_npx",
                "property_bag": {
                  "#property_field": "#item_name"
                },
                "$newline_refresh": "#newline_refresh",
                "bindings": [
                  {
                    "binding_name": "#text"
                  },
                  {
                    "binding_type": "view",
                    "source_property_name": "#text",
                    "target_property_name": "#item_name"
                  },
                  {
                    "binding_name": "#newline_refresh"
                  }
                ]
              }
            }
          ],
          "button_mappings": [
            {
              "from_button_id": "button.menu_select",
              "to_button_id": "button.text_edit_box_selected",
              "handle_select": true,
              "handle_deselect": false,
              "mapping_type": "pressed"
            },
            {
              "from_button_id": "button.menu_select",
              "to_button_id": "button.text_edit_box_selected",
              "handle_select": false,
              "handle_deselect": true,
              "mapping_type": "global",
              "consume_event": false
            },
            {
              "from_button_id": "button.menu_ok",
              "to_button_id": "button.text_edit_box_selected",
              "handle_select": true,
              "handle_deselect": false,
              "mapping_type": "pressed"
            },
            {
              "from_button_id": "button.menu_cancel",
              "to_button_id": "button.text_edit_box_deselected",
              "handle_select": false,
              "handle_deselect": true,
              "mapping_type": "global"
            },
            {
              "to_button_id": "button.text_edit_box_hovered",
              "mapping_type": "pressed"
            },
            {
              "from_button_id": "button.menu_clear",
              "to_button_id": "button.text_edit_box_clear",
              "handle_select": false,
              "handle_deselect": false,
              "mapping_type": "focused"
            }
          ]
        }
      }
    ]
  },

  "messages_stack_panel": {
    "type": "stack_panel",
    "orientation": "vertical",
    "$scrolling_content_anchor_from": "bottom_left",
    "$scrolling_content_anchor_to": "bottom_left",
    "factory": {
      "name": "messages_factory",
      "max_children_size": 100,
      "control_ids": {
        "chat_screen_messages": "chat_screen_messages@chat.chat_message_content"
      }
    }
  },

  "chat_screen_content": {
    "modifications": [
      {
        "array_name": "controls",
        "operation": "insert_front",
        "value": [
          {
            "copy_mode_toggle_panel": {
              "type": "stack_panel",
              "orientation": "horizontal",
              "size": [ "100%c", 30 ],
              "layer": 20,
              "anchor_from": "top_right",
              "anchor_to": "top_right",
              "offset": [ 30, -8 ],
              "controls": [
                {
                  "copy_mode": {
                    "type": "panel",
                    "size": [ "100%c", "100%" ],
                    "anchor_from": "top_left",
                    "anchor_to": "top_left",
                    "controls": [
                      {
                        "label": {
                          "type": "label",
                          "size": [ 200, 10 ],
                          "offset": [ -53, 2 ],
                          "text": "gotemba.chatTextCopy.copy",
                          "color": "$title_text_color",
                          "layer": 20,
                          "text_alignment": "right"
                        }
                      },
                
                      {
                        "toggle_panel": {
                          "type": "panel",
                          "size": [ "100%c", "100%c" ],
                          "layer": 20,
                          "anchor_from": "bottom_left",
                          "anchor_to": "bottom_left",
                          "controls": [
                            {
                              "copy_toggle@settings_common.option_toggle": {
                                "$control_name": "chat.copy_mode",
                                "layer": 20,
                                "size": [ 32, "100%c" ],
                                "offset": [ 165, 0 ]
                              }
                            }
                          ]
                        }
                      }
                    ]
                  }
                }
              ]
            }
          },
          {
            "copy_mode_text": {
              "type": "image",
              "texture": "textures/ui/White",
              "anchor_from": "top_right",
              "anchor_to": "top_right",
              "size": [ "100%c", 16 ],
              "offset": [ 0, 23 ],
              "color": [ 0.192, 0.196, 0.2 ],
              "layer": 5,
              "bindings": [
                {
                  "binding_type": "view",
                  "source_control_name": "chat.copy_mode",
                  "source_property_name": "#toggle_state",
                  "target_property_name": "#visible"
                }
              ],
              "controls": [
                {
                  "stack": {
                    "type": "stack_panel",
                    "orientation": "horizontal",
                    "size": [ "100%c", 14 ],
                    "layer": 1,
                    "controls": [
                      {
                        "padding_1": {
                          "type": "panel",
                          "size": [ 2, 0 ]
                        }
                      },
                      {
                        "infobulb_panel": {
                          "type": "panel",
                          "size": [ "100%c", "100%" ],
                          "controls": [
                            {
                              "infobulb": {
                                "type": "image",
                                "texture": "textures/ui/infobulb_darkborder_small",
                                "size": [ 7, 9 ]
                              }
                            }
                          ]
                        }
                      },
                      {
                        "padding_2": {
                          "type": "panel",
                          "size": [ 2, 0 ]
                        }
                      },
                      {
                        "text_panel": {
                          "type": "panel",
                          "size": [ "100%c", "100%" ],
                          "controls": [
                            {
                              "text": {
                                "type": "label",
                                "text": "gotemba.chatTextCopy.copyMode",
                                "size": [ "default", 10 ]
                              }
                            }
                          ]
                        }
                      },
                      {
                        "padding_3": {
                          "type": "panel",
                          "size": [ 2, 0 ]
                        }
                      }
                    ]
                  }
                }
              ]
            }
          }
        ]
      }
    ]
  }
}